<main class="app-body">
  <% site.tags.map(function(tag, index){ %>
    <div class="tag-list">
      <h3 class="tag-name" id="tag-<%= tag.name %>">
        #<%= tag.name %>
      </h3>
      <% tag.posts.map(function(post) { %>
        <ul class="tag-preview">
          <li>
            <a href="<%- config.root %><%- post.path %>">
              <%- post.title || "Untitled" %>
            </a>
          </li>
        </ul>
        <% }) %>
    </div>
    <% }) %>
</main>